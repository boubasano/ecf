{% extends 'base.html.twig' %}

{% block title %}La meteo de votre localité !{% endblock %}

{% block body %}
    <section class="section">
        <div class="presentation">
            <a href="{{ path('meteo') }}">
                <button type="button" class="btn btn-outline-secondary">Vos favoris</button>
            </a>
        </div>
        <h1 id="accueil">Rechercher la météo d'une autre ville !</h1><br><br>
        {{ form_start(form) }}
        <nav class="navbar navbar-light bg-dark">
            <input class="form-control mr-sm-2"
                   placeholder="Search"
                   aria-label="Search"
                   id="search"
                   name="search"/>
            <button class="btn btn-outline-success my-2 my-sm-0" id="button"
                    type="submit">{{ button_label|default('Search') }}</button>
            {{ form_end(form) }}
        </nav>

        <br>
        <br>
        <h2>
            <a href="{{ path('home') }}"><span id="ville"></span></a>
        </h2>
        <span class="icons"></span>
        <h3><span id="temperature"></span> °C (<span id="conditions"></span>)</h3>
        <h3>Taux d'humidité : <span id="humidity"></span></h3>

    </section>
{% endblock %}
