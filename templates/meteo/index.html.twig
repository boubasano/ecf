{% extends 'base.html.twig' %}

{% block title %}Hello MeteoController!{% endblock %}

{% block body %}
    {% for meteos in meteo %}
    <div class="container-fluid">
        <div class="card-deck">
            <div class="card">
                <img src="{{ meteos.weather_icons }}" class="card-img-top" alt="image" id="icons"><br><br>
                <div class="card-body">
                    <h5 class="card-title" id="ville">{{ meteos.name }}</h5>
                    <p class="card-text" id="temperature">{{ meteos.temperature }} °C ({{ meteos.weather_descriptions }}
                        )</p>
                    <p class="card-text" id="humidity">Taux d'humidité: {{ meteos.humidity }}</p>
                    <a href="#" class="btn btn-secondary">Go somewhere</a>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
{% endblock %}
